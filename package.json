{
	"name": "@candlefw/test",
	"version": "0.3.0",
	"description": "CandleFW Testing System",
	"type": "module",
	"types": "./build/types/main.d.ts",
	"main": "./build/library/main.js",
	"bin": {
		"cfw.test": "./build/library/bin/cfw.test.js"
	},
	"scripts": {
		"prepublishOnly": "yarn build && yarn test",
		"test": "./bin/cfw.test.js ./test/cfw.test.spec.js",
		"build.watch": "tsc --watch",
		"build": "tsc -p ./tsconfig.json",
		"compile": "hydrocarbon compile --type module --unattended -o  ./source/utilities/ ./source/grammar/error_line_parser.hcg"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/candlefw/test.git"
	},
	"author": "Anthony Weathersby <anthonycweathersby@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@candlefw/conflagrate": "^0.0.5-alpha",
		"@candlefw/hydrocarbon": "^0.3.4-dev-1",
		"@candlefw/js": "0.1.6-dev-1",
		"@candlefw/spark": "0.1.0",
		"@candlefw/url": "^0.1.1",
		"@candlefw/wax": "0.0.2",
		"@candlefw/wind": "^0.4.1-dev",
		"deep-equal": "^2.0.1"
	},
	"devDependencies": {
		"@types/node": "^13.9.1",
		"chai": "^4.2.0",
		"typedoc": "^0.17.1",
		"typescript": "^3.8.3"
	},
	"engines": {
		"node": ">=13.7.0"
	}
}