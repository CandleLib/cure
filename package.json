{
	"name": "@candlefw/test",
	"version": "0.4.3",
	"description": "CandleFW Testing System",
	"type": "module",
	"types": "./build/types/main.d.ts",
	"main": "./build/library/main.js",
	"bin": {
		"cfw.test": "./build/library/bin/cli.js"
	},
	"scripts": {
		"prepublishOnly": "yarn build && yarn test",
		"test": "node ./build/library/bin/cli.js --headless --threads=2 --reporter=ci ./test/",
		"test.watch": "cfw.test -w --threads=2 ./test/**",
		"build.watch": "tsc --watch",
		"build": "tsc -p ./tsconfig.json",
		"compile": "hydrocarbon compile --type module --unattended -o  ./source/utilities/ ./source/grammar/error_line_parser.hcg"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/candlefw/test.git"
	},
	"author": "Anthony Weathersby <anthonycweathersby@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@candlefw/conflagrate": "*",
		"@candlefw/hydrocarbon": "*",
		"@candlefw/js": "^0.3.1",
		"@candlefw/lantern": "*",
		"@candlefw/spark": "*",
		"@candlefw/url": "*",
		"@candlefw/wax": "*",
		"@candlefw/wick": "*",
		"@candlefw/wind": "*",
		"deep-equal": "^2.0.1"
	},
	"devDependencies": {
		"@candlefw/test": "*",
		"@types/node": "^13.9.1",
		"chai": "^4.2.0",
		"typescript": "^4.0.2"
	},
	"engines": {
		"node": ">=13.7.0"
	}
}