var name = ""

var results = []

async function frameLoad(){

    const { contentWindow } = frame;

    setTimeout(async ()=>{

        const pending_results = await contentWindow.runTest(this.model);

        for(const result of pending_results){   

            result.test = this.model;
            
            const duration = result.clipboard_end - result.clipboard_start;

            result.total_time = (Math.round((duration * (duration < 1 ? 10000 : 10))) / 10) 
            + (duration < 1 ? "Î¼s" : "ms");
        }

        

        results = pending_results;
        
        complete_test(results, test_id);

        contentWindow.close();
    }, 1000)
}

frame.onload = ()=>frameLoad();

