{
    "compileOnSave": true,
    "include": [
        "./source/**/*.ts"
    ],
    "compilerOptions": {
        "types": [
            "@types/node"
        ],
        "allowJs": true,
        "baseUrl": "./",
        "alwaysStrict": true,
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "removeComments": true,
        "rootDir": "./source/",
        "module": "ESNext",
        "outDir": "./build/library",
        "declarationDir": "./build/types",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "inlineSources": true
    }
}